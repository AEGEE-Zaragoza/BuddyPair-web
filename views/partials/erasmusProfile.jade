h2 {{erasmus.name}} {{erasmus.surname}}
h3 Personal information
ul
  li(ng-if='erasmus.gender !== ""')
    b Gender: 
    | {{erasmus.gender}}
  li(ng-if='erasmus.birthdate !== ""')
    b Birthdate: 
    | {{erasmus.birthdate}}
  li(ng-if='erasmus.nacionality !== ""')
    b Nacionality: 
    | {{erasmus.nacionality}}
  li(ng-if='erasmus.email !== ""')
    b Email: 
    | {{erasmus.email}}
  li(ng-if='erasmus.phone !== ""')
    b Phone: 
    | {{erasmus.phone}}
  li(ng-if='erasmus.studies_name !== ""')
    b Studies: 
    | {{erasmus.studies_name}}
  li(ng-if='erasmus.faculty_name !== ""')
    b Faculty: 
    | {{erasmus.faculty_name}}
h3 Buddy Pair information
ul
  li(ng-if='erasmus.register_date !== ""')
    b Register date: 
    | {{erasmus.register_date}}
  li(ng-if='erasmus.gender_preference !== null')
    b Gender preference: 
    | {{erasmus.gender_preference}}
  li(ng-if='erasmus.arrival_date !== ""')
    b Arrival date: 
    | {{erasmus.arrival_date}}
  li(ng-if='erasmus.notes !== ""')
    b Notes: 
    | {{erasmus.notes}}
h3 Assigned peer
p 
  a(href='/peer/{{assignedPeer.peer_id}}') {{assignedPeer.name}} {{assignedPeer.surname}}
