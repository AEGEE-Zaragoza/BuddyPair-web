div.container
  div.col-md-offset-2.col-md-8
    form.form-horizontal
      div.panel.panel-default
        div.panel-heading Student information
        div.panel-body
          div.form-group
            label(for='name').control-label.col-md-2 Name
            div.col-md-10
              input(type='text' placeholder='Name' id='name').form-control
          div.form-group
            label(for='surname').control-label.col-md-2 Surname
            div.col-md-10
              input(type='text' placeholder='Surname' id='surname').form-control
          div.form-group
            label(for='gender').control-label.col-md-2 Gender
            div.col-md-10
              div.radio
                label #[input(type='radio' name='gender' id='gender')] Male
              div.radio
                label #[input(type='radio' name='gender')] Female
          div.form-group
            label(for='birthdate').control-label.col-md-2 Birthdate
            div.col-md-10
              input(type='date' id='birthdate').form-control
          div.form-group
            label(for='nacionality').control-label.col-md-2 Nacionality
            div.col-md-10
              select(id='nacionality').form-control
                option(ng-repeat='c in countries') {{c.name}}
          div.form-group
            label(for='email').control-label.col-md-2 Email
            div.col-md-10
              input(type='email' id='email' placeholder='Email').form-control
          div.form-group
            label(for='phone').control-label.col-md-2 Phone number
            div.col-md-10
              input(type='tel' id='phone' placeholder='Phone number').form-control
          div.form-group
            label(for='studies').control-label.col-md-2 Studies
            div.col-md-10
              select(id='studies').form-control
                option(ng-repeat='s in studies') {{s.name}}
          div.form-group
            label(for='faculty').control-label.col-md-2 Faculty
            div.col-md-10
              select(id='faculty').form-control
                option(ng-repeat='f in faculties') {{f.name}}
      div.panel.panel-default
        div.panel-heading Erasmus information
        div.panel-body
          div.form-group
            label(for='register_date').control-label.col-md-2 Register date
            div.col-md-10
              input(type='datetime-local' id='register_date').form-control
          div.form-group
            label(for='gender_preference').control-label.col-md-2 Gender preference
            div.col-md-10
              div.radio
                label #[input(type='radio' name='gender_preference' id='gender_preference')] Male
              div.radio
                label #[input(type='radio' name='gender_preference')] Female
          div.form-group
            label(for='arrival_date').control-label.col-md-2 Arrival date
            div.col-md-10
              input(type='datetime-local' id='arrival_date').form-control
          div.form-group
            label(for='notes').control-label.col-md-2 Notes
            div.col-md-10
              textarea(rows='5' id='notes').form-control
      button(type='button' style='margin-right: 5px;').btn.btn-default Cancel
      button(type='button').btn.btn-primary Submit
